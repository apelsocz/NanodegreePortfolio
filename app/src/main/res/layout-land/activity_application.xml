<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pelsoczi.nanodegreeportfolio.ApplicationActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="@string/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/app_title">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/one"
                android:layout_width="200dp"
                android:layout_height="36dp"

                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/proj_one"
                android:textColor="@color/buttonTextPositive" />
            <Button
                android:id="@+id/two"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/one"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/proj_two"
                android:textColor="@color/buttonTextPositive" />
            <Button
                android:id="@+id/three"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/two"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/proj_three"
                android:textColor="@color/buttonTextPositive" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/four"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/proj_four"
                android:textColor="@color/buttonTextPositive" />
            <Button
                android:id="@+id/five"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/four"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/proj_five"
                android:textColor="@color/buttonTextPositive" />
            <Button
                android:id="@+id/six"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:layout_below="@id/five"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/proj_six"
                android:textColor="@color/buttonTextPositive" />
        </RelativeLayout>
    </LinearLayout>






</RelativeLayout>
